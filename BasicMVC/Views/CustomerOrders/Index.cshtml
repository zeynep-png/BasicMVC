@model BasicMVC.Models.CustomerOrderViewModel

<h2>Customer Information</h2>
<table>
    <tr>
        <th>ID  </th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>
    <tr>
        <td>@Model.Customer.Id  </td>
        <td>@Model.Customer.FirstName</td>
        <td>@Model.Customer.LastName</td>
        <td>@Model.Customer.Email</td>
    </tr>
</table>

<h2>Order List</h2>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)

        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price.ToString("C")</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>